pipeline {
    agent any

    environment {
        VIRTUAL_ENV = 'venv'
    }

    stages {
        stage('Setup') {
            steps {
                bat "if not exist %VIRTUAL_ENV% ( python -m venv %VIRTUAL_ENV% )"
                bat "call %VIRTUAL_ENV%\\Scripts\\activate.bat && pip install -r requirements.txt"
            }
        }

        stage('Lint') {
            steps {
                bat "call %VIRTUAL_ENV%\\Scripts\\activate.bat && flake8 app.py"
            }
        }

        stage('Test') {
            steps {
                bat "call %VIRTUAL_ENV%\\Scripts\\activate.bat && pytest"
            }
        }

        stage('Coverage') {
            steps {
                bat "call %VIRTUAL_ENV%\\Scripts\\activate.bat && coverage run -m pytest"
                bat "call %VIRTUAL_ENV%\\Scripts\\activate.bat && coverage report -m"
            }
        }

        stage('Security Scan') {
            steps {
                bat "call %VIRTUAL_ENV%\\Scripts\\activate.bat && bandit app.py tests\\test_app.py"
            }
        }

        stage('Deploy') {
            steps {
                bat "call %VIRTUAL_ENV%\\Scripts\\activate.bat && python app.py"
            }
        }
    }

    post {
        always {
            cleanWs()
        }
    }
}
